@model Lpg.Data.Entity.PurchaseOrder

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="card">
    
    <div class="card-body">
     <h5>Create New Purchase Order</h5>
       
        <div>
            <form class="form-inline">
                <div class="form-group">
                    <label class="mr-2" for="">Po.No</label>
                    <input type="text" class="mr-2" name="" id="" placeholder="" aria-describedby="helpId">
         
                </div>
                <div class="form-group">
                  <label class="mr-2" for=" ">Po.Date</label>
                  <input type="text" class="mr-2" name="" id=""  placeholder="" aria-describedby="helpId">
           
                </div>
                <div class="form-group">
                  <label class="mr-2" for="">Type</label>
                  <select class="mr-2" name="" id="">
                    <option>Draft</option>
                    <option>Not Yet Receive</option>
                    <option>Receive</option>
                  </select>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <form>
        <div class="form-group row">
            <label for="inputName" class="col-sm-1-12 col-form-label"></label>
            <div class="col-sm-1-12">
                <input type="text" class="form-control" name="inputName" id="inputName" placeholder="">
            </div>
        </div>
        
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
